<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="350.0" stylesheets="@css/layout.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="timemanager.gui.controller.ProjectCreateController">
   <children>
      <Label layoutX="10.0" layoutY="10.0" prefHeight="71.0" prefWidth="350.0" text="Create a new project">
         <font>
            <Font size="20.0" />
         </font>
         <padding>
            <Insets left="22.0" />
         </padding>
      </Label>
      <Label layoutX="32.0" layoutY="87.0" text="Name">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="projectName" layoutX="31.0" layoutY="112.0" prefHeight="47.0" prefWidth="300.0" />
      <Button fx:id="saveProjectButton" layoutX="31.0" layoutY="364.0" mnemonicParsing="false" onAction="#saveProject" prefHeight="51.0" prefWidth="146.0" styleClass="addUserFormButton" text="Save" />
      <Line endX="100.0" layoutX="132.0" layoutY="64.0" startX="-100.0" stroke="#333333" />
      <Button fx:id="cancelSaveProject" layoutX="186.0" layoutY="364.0" mnemonicParsing="false" onAction="#cancelSaveProject" prefHeight="51.0" prefWidth="146.0" styleClass="addUserFormButton" text="Cancel" />
      <Label fx:id="errorLabel" layoutX="33.0" layoutY="192.0" prefHeight="17.0" prefWidth="300.0" text="Whooops!! Your input does not meet the requirements!" textFill="RED" visible="false" />
      <Label layoutX="33.0" layoutY="162.0" text="Salary">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="projectSalary" layoutX="32.0" layoutY="187.0" prefHeight="47.0" prefWidth="300.0" />
      <Label layoutX="34.0" layoutY="237.0" text="Client ID">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="projectClientId" layoutX="33.0" layoutY="262.0" prefHeight="47.0" prefWidth="300.0" />
   </children>
</AnchorPane>
